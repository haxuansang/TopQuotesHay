<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="650dp"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="15dp"
    >
    <TextView
        android:id="@+id/title_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TOP QUOTES HAY"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_marginTop="20dp"/>
    <RelativeLayout
        android:layout_below="@id/title_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp">
    <android.support.v7.widget.CardView
        android:id="@+id/btntopquotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:layout_height="80dp"
            android:layout_width="match_parent"
            android:background="@drawable/thiennhien1"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top Quotes"
            android:textColor="@android:color/white"
            android:layout_gravity="center|bottom"
            android:textSize="24sp"
            />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/btnlife"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btntopquotes"
        android:layout_marginTop="30dp">
        <ImageView
            android:layout_height="80dp"
            android:layout_width="match_parent"
            android:background="@drawable/phieuluu2"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quotes về cuộc sống"
            android:textColor="@android:color/white"
            android:layout_gravity="center|bottom"
            android:textSize="24sp"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/btnlove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnlife"
        android:layout_marginTop="30dp">
        <ImageView
            android:layout_height="80dp"
            android:layout_width="match_parent"
            android:background="@drawable/tinhyeu2"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quotes về tình yêu"
            android:textColor="@android:color/white"
            android:layout_gravity="center|bottom"
            android:textSize="24sp"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/btnfamily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnlove"
        android:layout_marginTop="30dp">
        <ImageView
            android:layout_height="80dp"
            android:layout_width="match_parent"
            android:background="@drawable/giadinh"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quotes về gia đình"
            android:textColor="@android:color/white"
            android:layout_gravity="center|bottom"
            android:textSize="24sp"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/btnjob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnfamily"
        android:layout_marginTop="30dp">
        <ImageView
            android:layout_height="80dp"
            android:layout_width="match_parent"
            android:background="@drawable/sunghiep"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quotes về sự nghiệp"
            android:textColor="@android:color/white"
            android:layout_gravity="center|bottom"
            android:textSize="24sp"
            />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/btnfriend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnjob"
        android:layout_marginTop="30dp">
        <ImageView
            android:layout_height="80dp"
            android:layout_width="match_parent"
            android:background="@drawable/banbe"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quotes về bạn bè"
            android:textColor="@android:color/white"
            android:layout_gravity="center|bottom"
            android:textSize="24sp"
            />
    </android.support.v7.widget.CardView>
    </RelativeLayout>

</RelativeLayout>
</ScrollView>
